<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="customer-account-navigation-emailtype-link"  destination="customer_account_navigation" after="customer-account-navigation-wish-list-link"/>
 
      <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-emailtype-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Gruppi di Acquisto</argument>
                    <argument name="path" xsi:type="string">preorder/gda/index</argument>
                </arguments>
            </block>
        </referenceBlock>
		
		<referenceBlock name='customer-account-navigation-downloadable-products-link' remove='true'/>
    </body>
</page>