<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-product-grouped"/>
       
            <referenceBlock  name="product.info.grouped">
            	<action method="setTemplate">
        			<argument name="template" xsi:type="string">Drc_PreOrder::product/grouped.phtml</argument>
    			</action>
    		</referenceBlock>
    		<referenceContainer name="product.info.type">
            	
            <block class="Drc\PreOrder\Block\Preordernote" name="product.info.grouped.preorder" template="Drc_PreOrder::product/preordernote.phtml" />	
        </referenceContainer>
           
       
       
    </body> 
</page>
